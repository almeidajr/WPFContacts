<UserControl x:Class="Contacts.Controls.ContactControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Contacts.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="150">
    <StackPanel Background="AliceBlue">
        <TextBlock x:Name="NameTextBlock"
                   d:Text="José Rogério"
                   FontSize="20"
                   FontWeight="Bold"/>
        <TextBlock x:Name="EmailTextBlock"
                   d:Text="jose@mail.com"
                   FontSize="15"
                   Foreground="DarkBlue"/>
        <TextBlock x:Name="PhoneTextBlock"
                   d:Text="(11) 9 9999-9999"
                   FontSize="15"
                   FontStyle="Italic"/>
    </StackPanel>
</UserControl>
