<Window x:Class="Contacts.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="Contact Details" Height="450" Width="300">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
    </Window.Resources>

    <StackPanel Margin="10">
        <Label Content="Contact Details" Margin="0,0,0,10" />
        <TextBox x:Name="NameField" />
        <TextBox x:Name="EmailField" />
        <TextBox x:Name="PhoneField" />
        <Button Content="Edit"
                Click="EditButton_Click"
                Margin="0,0,0,5"/>
        <Button Content="Delete"
                Click="DeleteButton_Click"
                Background="Red"
                Foreground="White" />
    </StackPanel>
</Window>
